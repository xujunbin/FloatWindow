<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_float_win">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/float_win_tv_type"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/float_icon_wifi"/>

        </LinearLayout>

        <TextView
            android:id="@+id/float_win_tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/float_speed_kb_per_s"
            android:textSize="12sp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/float_win_iv_close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/float_icon_close"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
